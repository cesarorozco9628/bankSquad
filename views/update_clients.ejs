<!DOCTYPE html>
<html lang="en">
    <%- include('partials/header'); -%>
    <%- include('partials/style'); -%>
<body>
    <%- include('partials/navigation'); -%>
    
    <section class="marginSection">
        <div class="container" style="text-align: center;">
            <h1>Datos Anteriores</h1>
            <div>
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Telephone</th>
                    </tr>
                    </thead>
                    <tbody>
                            <tr>
                                <th scope="row"><%= data.id %></th>
                                <td scope="row"><%= data.first_name%></td>
                                <td scope="row"><%= data.lats_name %></td>
                                <td scope="row"><%= data.email %></td>
                                <td scope="row"><%= data.telephone %></td>
                            </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="container">
            <h2 style="margin-top: 30px; text-align: center;">
                Ingresa los datos que deseas actualizar!!
            </h2>
            <form action="/clients/update/<%= data.id %>" method="post">
                <div class="mb-3">
                    <label for="inputName" class="form-label">First Name</label>
                    <input type="text" name="first_name" class="form-control" id="firstName" required>
                </div>
                <div class="mb-3">
                    <label for="lastName" class="form-label">Last Name</label>
                    <input class="form-control" name="lats_name" id="lastName" rows="3" required/>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input class="form-control" name="email" id="email" rows="3" required/>
                </div>
                <div class="mb-3">
                    <label for="telephone" class="form-label">Telephone</label>
                    <input class="form-control" name="telephone" id="telephone" rows="3" required/>
                </div>
                <button type="submit" class="btn bg-boton">Update</button>
              </form>
        </div>
    </section>
    <%- include('partials/footer'); -%>
</body>
</html>