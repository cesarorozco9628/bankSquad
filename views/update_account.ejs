<!DOCTYPE html>
<html lang="en">
    <%- include('partials/header'); -%>
    <%- include('partials/style'); -%>
<body>
    <%- include('partials/navigation'); -%>
    
    <section class="marginSection">
        <div class="container" style="text-align: center;">
            <h1>Datos Anteriores</h1>
            <div>
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                       
                    </tr>
                    </thead>
                    <tbody>
                            <tr>
                                <td scope="row"><%= data.id %></td>
                                <td scope="row"><%= data.name %></td>
                                <td scope="row"><%= data.description %></td>
                            </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="container">
            <h2 style="margin-top: 30px; text-align: center;">
                Ingresa los datos que deseas actualizar!!
            </h2>
            <form action="/account_types/update/<%= data.id %>" method="POST">
                <div class="mb-3">
                  <label for="inputName" class="form-label">NAME</label>
                  <input type="text" name="name" class="form-control" id="inputName" required/>
                </div>
                <div class="mb-3">
                  <label for="txtDescription" class="form-label">DESCRIPTION</label>
                  <textarea class="form-control" name="description" id="txtDescription" rows="3"> </textarea>
                </div>
                <!-- <a href="/account_types/update/lol/:id"> -->
                    <button type="submit" class="btn bg-boton">Update</button>
                <!-- </a> -->
              </form>
        </div>
    </section>
    <%- include('partials/footer'); -%>
</body>
</html>